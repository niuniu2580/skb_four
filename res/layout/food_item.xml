<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="hello world" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <com.skb.utils.RoundImageView
            android:id="@+id/image_first"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#FFD700"
            imagecontrol:border_thickness="2dp" />

        <com.skb.utils.RoundImageView
            android:id="@+id/image_second"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#FFD700"
            imagecontrol:border_thickness="2dp" />

        <com.skb.utils.RoundImageView
            android:id="@+id/image_third"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#FFD700"
            imagecontrol:border_thickness="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/first_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="first" />

        <TextView
            android:id="@+id/second_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="second" />

        <TextView
            android:id="@+id/third_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="third" />
    </LinearLayout>

</LinearLayout>